# My Git Config
# vim: ft=gitconfig ts=4 noet

[user]
	name = Tom JL Hope
	email = tjlhope@gmail.com

[core]
	excludesfile = ~/.cvsignore
	#pager = $VIMPAGER
	whitespace = cr-at-eol	# need to edit dos style files

[color]
	ui = true

[merge]
	conflictstyle = diff3
	tool = vimdiff

[diff]
	renames = copy

[log]
	decorate = true

[alias]
	b = branch

	co = commit
	ca = commit --all

	ch = checkout

	l = log --exclude='refs/notes/*' --exclude='refs/hg/*'
	log = log --exclude='refs/notes/*' --exclude='refs/hg/*'
	gl = log --exclude='refs/notes/*' --exclude='refs/hg/*' --graph
	glog = log --exclude='refs/notes/*' --exclude='refs/hg/*' --graph
	la = log --exclude='refs/notes/*' --exclude='refs/hg/*' --graph --all
	gla = log --exclude='refs/notes/*' --exclude='refs/hg/*' --graph --all

	d = diff
	w = diff --word-diff=color --word-diff-regex='\\w+|\\S' --diff-algorithm=minimal
	wdiff = diff --word-diff=color --word-diff-regex='\\w+|\\S' --diff-algorithm=minimal
	fdiff = diff --full-index

	s = status
	st = status

	vn = svn

[pager]
	#svn-diff = true

[credential "https://github.com"]
	username = TjlHope

[remote-hg]
	hg-git-compat = true

[url "hg::http://hg.eng.telsis.local/hg/"]
	insteadOf = "thg:"
	insteadOf = "thg::"
	insteadOf = "http://hg.eng.telsis.local/hg/"

[url "git://git.eng.telsis.local/"]
	insteadOf = "tgit:"
	insteadOf = "tgit::"

[pull]
	rebase = preserve

[push]
	default = simple

[rerere]
	enabled = true

[init]
	templatedir = ~/.git/templates

[cvsimport]
	d = $CVSROOT
	r = cvs

[instaweb]
